<h1>Editing slide</h1>

<% form_for :slide, @slide, :url => slideshow_slides_path(@slide) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :slideshow_id %><br />
    <%= f.text_field :slideshow_id %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', slideshow_slide_path(@slide.slideshow) %> |
<%= link_to 'Back', slideshow_slides_path(@slide.slideshow) %>