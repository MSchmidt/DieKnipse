<h1>New slide</h1>

<% #form_for :slide, @slide, :url => user_path, :html => { :multipart => true } do |form| %>
<% form_for(@slide, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :slideshow_id %><br />
    <%= f.text_field :slideshow_id %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', slides_path %>